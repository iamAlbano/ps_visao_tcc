<%- include ('partials/head.ejs') %>

<body>

    <%- include ('partials/header.ejs') %>

    <section id="home">
        <!-- inicio HOME -->
        <div class="container">
            <div class="row">

                <div class="col-md-12">

                    <div class="titulo-home">
                        <h2>Contato</h2>
                    </div>

                </div>

            </div>

            <div class="row">

                <div class="col-md-8">

                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control" placeholder="Seu nome" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control" placeholder="Seu email" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" placeholder="Assunto" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-12 form-group">
                            <textarea class="form-control" name="" id="" rows="5" placeholder="Mensagem"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn">
                            Enviar
                            <i class="fas fa-check fa-sm"></i>
                        </button>
                    </div>

                </div>

                <div class="col-md-4">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="class-title">
                                Ligue
                                <i class="fas fa-phone-alt"></i>
                            </h5>
                            <p class="card-text">+55 (31) 3852-0000</p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="class-title">
                                Envie um email
                                <i class="fas fa-envelope"></i>
                            </h5>
                            <p class="card-text">contato@maissabor.com.br</p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="class-title">
                                Endereço
                                <i class="fas fa-home"></i>
                            </h5>
                            <p class="card-text">Rua João 123 da Silva 4, nº 69 - Centro</p>
                        </div>
                    </div>

                </div>

                </row>

            </div>
    </section>
    <!--/fim HOME -->
    <%- include ('partials/footer.ejs') %>
</body>

</html>